@model IEnumerable<Cursos.Models.Entidades.Curso>

@{
    ViewData["Title"] = "Cursos";
}



<header class="masthead_cursos" style="background-image: url('img/cursos.jpg')">>
   <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-40 gx-lg-50 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                      <span class="subheading_cursos">
                        <h1>"Estudar é fortalecer as asas para voar".</h1>
                    </span>
          </div>
        </div>
    </div>
</header>

<h1>Cursos</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
@foreach (var item in Model) 
{
<div class="card m-3 col" style="max-width: 540px;">
 <div class="col">
      <img src="@Html.DisplayFor(modelItem => item.thumbnail)" class="img-fluid rounded-start" alt="...">
 </div>
    <div class="col">
      <div class="card-body">
        <h5 class="card-title">@Html.DisplayFor(modelItem => item.nome)</h5>
        <p class="card-text">@Html.DisplayFor(modelItem => item.resumo)</p>
        <p class="card-text"><a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Veja mais</a> |</p>
        
      </div>
    </div>
</div>
}
</div>